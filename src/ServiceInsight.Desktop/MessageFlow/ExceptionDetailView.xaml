<Window x:Class="NServiceBus.Profiler.Desktop.MessageFlow.ExceptionDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exception Details" Height="400" Width="450" ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="5,5,5,5">
            <TextBlock Text="{Binding Path=Exception.Message}" />
            <TextBlock Text="{Binding Path=FormattedSource}" />
            <ScrollViewer >
                <Border BorderBrush="Black" BorderThickness="1">
                    <TextBox Foreground="Black" IsReadOnly="True" Text="{Binding Path=Exception.StackTrace}" Height="295" ScrollViewer.CanContentScroll="True" />
                </Border>
            </ScrollViewer>
        </StackPanel>
        <Button Style="{StaticResource DialogButton}" Margin="5,5,5,5" IsCancel="True" x:Name="Close" Content="Close" Grid.Row="1" Grid.Column="2">
        </Button>
    </Grid>
</Window>
